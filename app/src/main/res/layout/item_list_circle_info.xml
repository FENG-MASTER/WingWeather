<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:android_custom="http://schemas.android.com/apk/res-auto"
              android:padding="20dp"
              android:background="@drawable/item_list_bg"
              android:orientation="horizontal"
              android:weightSum="5"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <com.wingweather.qianzise.wingweather.view.RingBar
        android:id="@+id/rb_info_circle_left"
        android_custom:degree="270"
        android_custom:max="100"
        android_custom:borderWidth="5dp"
        android_custom:finishColor="@color/colorToolBarMin"
        android_custom:unFinishColor="@color/gray"
        android:gravity="center"
        android_custom:borderType="round"
        android:layout_weight="2"
        android:layout_width="100dp"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_info_left"
                android:text="16°"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_info_left_next_day"
                android:textStyle="italic"
                android:text="19°"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </com.wingweather.qianzise.wingweather.view.RingBar>




    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:layout_weight="8"
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/iv_info_title_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_weight="2"
            android:id="@+id/tv_info_title"
            android:text="温度"
            android:textColor="@color/gray"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <com.wingweather.qianzise.wingweather.view.RingBar
        android:id="@+id/rb_info_circle_right"
        android_custom:degree="270"
        android_custom:max="100"
        android_custom:borderWidth="5dp"
        android_custom:finishColor="@color/colorToolBarMin"
        android_custom:unFinishColor="@color/gray"
        android:gravity="center"
        android_custom:borderType="round"
        android:layout_weight="2"
        android:layout_width="100dp"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_info_right"
                android:text="18°"

                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv_info_right_next_day"
                android:textColor="@color/gray"
                android:text="19°"
                android:textStyle="italic"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </com.wingweather.qianzise.wingweather.view.RingBar>







</LinearLayout>
